model Post {
  id         String     @id @default(uuid())
  title      String     @db.VarChar
  content    String     @db.VarChar
  thumbnail  String?
  isFeatured Boolean    @default(false)
  tags       String[]
  views      Int        @default(0)
  status     PostStatus @default(PUBLISHED)
  authorId   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  comments   Comment[]

  @@index([authorId])
  @@map("posts")
}

enum PostStatus {
  DRAF
  PUBLISHED
  ARCHIVED
}