model Comment {
  id        String        @id @default(uuid())
  content   String        @db.Text
  postId    String
  post      Post          @relation(fields: [postId], references: [id])
  authorId  String
  parentId  String?
  parent    Comment?      @relation("commentRepliy", fields: [parentId], references: [id])
  replies   Comment[]     @relation("commentRepliy")
  status    CommentStatus @default(APPROVE)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([postId])
  @@index([authorId])
  @@map("comments")
}



enum CommentStatus {
  APPROVE
  REJECT
}